<!doctype html>
<html>
	<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, user-scalable=no">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	<title>{{basics.firstName}} {{basics.lastName}}</title>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/octicons/2.0.2/octicons.min.css">

	<style>
	@import url(
		http://fonts.googleapis.com/css?family=Lato:400,700
	);
	body {
		font-family: Lato, sans-serif;
		color: #2c3e50;
		margin: 0;
		margin-bottom: 80px;
	}
	a {
		color: #2ecc71;
	}
	a:focus,
	a:hover {
		color: #2ecc71;
		text-decoration: none;
	}
	p {
		line-height: 1.5;
		margin: 0;
		text-align: justify;
	}
	p + p {
		margin-top: 10px;
	}
	h1,
	h2,
	h3,
	h4 {
		margin-top: 0;
	}
	blockquote {
		border-left: 5px solid #e7e9ec;
		font-size: 14px;
	}
	blockquote p {
		text-align: left;
	}
	ul,
	li {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	.list {
		margin-left: 15px;
	}
	.list li {
		line-height: 1.8;
	}
	.container {
		max-width: 750px;
		padding: 0 30px;
	}
	.bullet:before {
		content: "\f052";
		float: left;
		font: 13px Octicons;
		opacity: .1;
		margin: 6px 15px 0 0;
	}
	#header {
		background: #f4f6f6;
		padding: 70px 0;
	}
	#header h2 {
		font-size: 28px;
		color: #95a5a6;
	}
	#content {
		padding: 50px 0;
	}
	#content h3 {
		margin-top: -3px;
		color: #f1c40f;
	}
	#content h4 {
		margin-bottom: 0px;
	}
	#content h4 .date-range {
		font-size: 14px;
		float: right;
		color: #95a5a6;
	}
	#content aside {
		padding-right: 20px;
		text-align: right;
	}
	#content strong {
		display: block;
	}
	#content [class*='col-sm-'] {
		margin-bottom: 10px;
	}
	#content .row + .row {
		margin-top: 20px;
	}
	#content .item {
		overflow: hidden;
	}
	#content .item + .item {
		margin-top: 32px;
	}
	#contact li:first-child,
	#social li:first-child {
		font-weight: bold;
	}
	#work .link {
		float: right;
	}
	#work .position {
		margin-bottom: 10px;
	}
	#work .highlights {
		margin-top: 20px;
	}
	#work .highlights h4 {
		margin-bottom: 5px;
	}
	#work .highlights li {
		padding-left: 36px;
		text-align: justify;
	}
	#work .highlights li:before {
		margin-top: 5px;
		margin-left: -20px;
		position: absolute;
	}
	#education .area:before {
		content: "\f0d7";
		font: 16px Octicons;
		margin-right: 6px;
	}
	#education .courses {
		margin-top: 20px;
	}
	#education .courses h4 {
		margin-bottom: 5px;
	}
	#awards em,
	#publications em {
		color: #95a5a6;
		font-weight: normal;
		font-style: normal;
	}
	#publications .link:before {
		content: attr(href);
	}
	#skills h4 {
		margin-bottom: 4px;
	}

	@media (min-width: 480px) {
		.strike-through {
			border-top: 1px solid #f4f6f6;
			height: 20px;
			margin-top: 12px;
			margin-bottom: -2px;
			position: relative;
		}
		.strike-through span,
		.strike-through a {
			background: #fff;
			position: absolute;
		}
		.strike-through span:first-child {
			padding-right: 20px;
			margin-top: -12px;
		}
		.strike-through span + span {
			font-size: 14px;
			margin-top: -10px;
			padding-left: 20px;
			right: 0;
		}
	}
	@media (max-width: 768px) {
		#header {
			padding: 50px 0 40px;
		}
		#header h1 {
			font-size: 28px;
		}
		#header h2 {
			font-size: 24px;
		}
		#content {
			padding: 40px 0;
		}
		#content aside {
			padding-right: 0;
			text-align: left;
		}
		#contact ul + ul,
		#social ul + ul {
			margin-top: 1em;
		}
	}
	@media (max-width: 480px) {
		.date {
			font-size: 14px;
			margin-bottom: 5px;
		}
		.strike-through span:first-child {
			margin-bottom: 7px;
		}
		.strike-through span {
			display: block;
		}
		#header {
			padding: 40px 0 30px;
		}
		#publications .link:before {
			content: "View publication";
		}
	}
	</style>

	</head>
	<body>

	<header id="header">
		<div class="container">
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-9">
					<h1>{{basics.name}}</h1>
					<h2>{{basics.label}}</h2>
				</div>
			</div>
		</div>
	</header>
	<div id="content">
		<div class="container">
			<section id="about" class="row">
				<aside class="col-sm-3">
					<h3>About</h3>
				</aside>
				<div class="col-sm-9">
					<p>{{{nl2br basics.summary}}}</p>
				</div>
			</section>
			<section id="contact" class="row">
				<aside class="col-sm-3">
					<h3>Contact</h3>
				</aside>
				<div class="col-sm-9">
					<div class="row">
					{{#if basics.email}}
					<ul class="col-sm-6">
						<li>Email</li>
						<li>{{basics.email}}</li>
					</ul>
					{{/if}}
					{{#if basics.phone}}
					<ul class="col-sm-6">
						<li>Phone</li>
						<li>{{basics.phone}}</li>
					</ul>
					{{/if}}
					</div>
				</div>
			</section>
			{{#if work.length}}
			<section id="work" class="row">
				<aside class="col-sm-3">
					<h3>Work</h3>
				</aside>
				<div class="col-sm-9">
				{{#work}}
				<div class="item">
					<h4 class="strike-through">
						<span>{{company}}</span>
						<span class="date">{{formatDate startDate}} — {{formatDate endDate}}</span>
					</h4>
					<a class="link" href="{{website}}">{{website}}</a>
					<strong class="position">{{position}}</strong>
					<p>{{{nl2br summary}}}</p>
					{{#if highlights.length}}
					<div class="highlights">
						<h4>Highlights</h4>
						<ul>
						{{#highlights}}
							<li class="bullet">{{.}}</li>
						{{/highlights}}
						</ul>
					</div>
					{{/if}}
				</div>
				{{/work}}
				</div>
			</section>
			{{/if}}
			{{#if education.length}}
			<section id="education" class="row">
				<aside class="col-sm-3">
					<h3>Education</h3>
				</aside>
				<div class="col-sm-9">
				{{#education}}
				<div class="item">
					<h4 class="strike-through">
						<span>{{institution}}</span>
						<span class="date">{{formatDate startDate}} — {{formatDate endDate}}</span>
					</h4>
					<strong class="area">
						{{area}}, {{studyType}}
					</strong>
					{{#if courses.length}}
					<div class="courses">
						<h4>Courses</h4>
						<ul class="list">
						{{#courses}}
							<li class="bullet">{{.}}</li>
						{{/courses}}
						</ul>
					</div>
					{{/if}}
				</div>
				{{/education}}
				</div>
			</section>
			{{/if}}
			{{#if awards.length}}
			<section id="awards" class="row">
				<aside class="col-sm-3">
					<h3>Awards</h3>
				</aside>
				<div class="col-sm-9">
				{{#awards}}
				<div class="item">
					<h4 class="strike-through">
						<span>{{title}}</span>
					</h4>
					{{#if date}}
					<span class="pull-right">
						<em>Awarded</em> 17 july, 2014 <!-- Temporary -->
					</span>
					{{/if}}
					{{#if awarder}}
					<strong>
						<em>by</em> {{awarder}}
					</strong>
					{{/if}}

				</div>
				{{/awards}}
				</div>
			</section>
			{{/if}}
			{{#if publications.length}}
			<section id="publications" class="row">
				<aside class="col-sm-3">
					<h3>Publications</h3>
				</aside>
				<div class="col-sm-9">
				{{#publications}}
				<div class="item">
					<h4 class="strike-through">
						<span>{{name}}</span>
						<span class="date">{{formatDate releaseDate}}</span>
					</h4>
					{{#if website}}
					<span class="pull-right">
						<a class="link" href="{{website}}"></a>
					</span>
					{{/if}}
					{{#if publisher}}
					<strong>
						<em>Published by</em> {{publisher}}
					</strong>
					{{/if}}

				</div>
				{{/publications}}
				</div>
			</section>
			{{/if}}
			{{#if skills.length}}
			<section id="skills" class="row">
				<aside class="col-sm-3">
					<h3>Skills</h3>
				</aside>
				<div class="col-sm-9">
					<div class="row">
						<ul>
						{{#skills}}
						<li class="col-xs-6 skill">
							<h4>{{name}}</h4>
							<ul class="list">
							{{#keywords}}
								<li class="bullet">{{.}}</li>
							{{/keywords}}
							</ul>
						</li>
						{{/skills}}
						</ul>
					</div>
				</div>
			</section>
			{{/if}}
			{{#if references.length}}
			<section id="references" class="row">
				<aside class="col-sm-3">
					<h3>References</h3>
				</aside>
				<div class="col-sm-9">
					{{#references}}
					<blockquote>
						<p>{{{nl2br reference}}}</p>
						<p><strong>— {{name}}</strong></p>
					</blockquote>
					{{/references}}
				</div>
			</section>
			{{/if}}
		</div>
	</div>

	</body>
</html>
